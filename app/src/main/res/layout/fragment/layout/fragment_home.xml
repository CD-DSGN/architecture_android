<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_app_deep"
    android:fitsSystemWindows="true"
    >

    <android.support.design.widget.AppBarLayout
        app:elevation="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
  >


            <RelativeLayout
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="118px"
                app:layout_scrollFlags="scroll|enterAlways"
                android:paddingTop="30px"
                android:id="@+id/rela_title"
                >

                <ImageView
                    android:id="@+id/iv_search"
                    android:layout_width="33px"
                    android:layout_height="33px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="62px"
                    android:src="@drawable/ic_search_small"
                    />

                <ImageView
                    android:id="@+id/iv_camera"
                    android:layout_width="35px"
                    android:layout_height="27px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="62px"
                    android:src="@drawable/ic_camera_small"
                    />

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   android:layout_centerInParent="true"
                    android:text="读家"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    />
            </RelativeLayout>
    </android.support.design.widget.AppBarLayout>

<cn.bingoogolapple.refreshlayout.BGARefreshLayout
    android:id="@+id/refreshLayout"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="visible"
     >
    </android.support.v7.widget.RecyclerView>
</cn.bingoogolapple.refreshlayout.BGARefreshLayout>

    <include layout="@layout/homeview_nobook" android:visibility="gone"/>

</android.support.design.widget.CoordinatorLayout>
