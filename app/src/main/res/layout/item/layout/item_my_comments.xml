<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="618px"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="72px"
            android:layout_height="72px"
            android:src="@drawable/logo"
            />

        <TextView
            android:id="@+id/nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_toRightOf="@+id/avatar"
            android:text="花花"
            android:textColor="@color/text_black"
            android:textSize="28px"
            />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/avatar"
            android:layout_below="@+id/nickname"
            android:layout_marginLeft="20px"
            android:layout_toRightOf="@+id/avatar"
            android:text="2017/01/03 13:58"
            android:textColor="@color/text_lightgray"
            android:textSize="20px"
            />

        <TextView
            android:id="@+id/replynum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/avatar"
            android:layout_below="@+id/nickname"
            android:layout_marginLeft="36px"
            android:layout_toRightOf="@+id/time"
            android:text="4条回复"
            android:textColor="@color/text_lightgray"
            android:textSize="20px"
            />

        <TextView
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/delete"
            android:textColor="#cce73636"
            android:textSize="24px"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="随便写吧。"
        android:textColor="@color/text_black"
        android:textSize="28px"
        />

    <RelativeLayout
        android:layout_width="618px"
        android:layout_height="98px"
        android:background="@drawable/bg_white_irr">

        <ImageView
            android:id="@+id/cover"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_marginLeft="24px"
            android:src="@drawable/logo"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="《从你的全世界路过》"
            android:textColor="@color/text_black"
            android:textSize="32px"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="618px"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal"
        android:layout_marginTop="20px"
        >

        <LinearLayout
            android:id="@+id/ll_comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="26px"
                android:layout_height="26px"
                android:src="@drawable/iv_comment_gray"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:text="@string/comment"
                android:textSize="24px"
                android:textColor="#999999"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="80px">

            <ImageView
                android:layout_width="26px"
                android:layout_height="26px"
                android:src="@drawable/iv_like"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="36"
                android:textSize="24px"
                android:textColor="#999999"
                android:layout_marginLeft="10px"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="80px">

            <ImageView
                android:layout_width="26px"
                android:layout_height="26px"
                android:src="@drawable/ic_share"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/share"
                android:textSize="24px"
                android:textColor="#e61cc9a2"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>