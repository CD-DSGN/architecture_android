<?xml version="1.0" encoding="utf-8"?>
<com.grandmagic.readingmate.view.SwipeItemLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="156px"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    >

    <TextView
        android:id="@+id/notename"
        android:layout_width="148px"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="#c2c2c2"
        android:gravity="center"
        android:text="备注"
        android:textColor="@color/white"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="156px"
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20px"
            tools:src="@color/bottom_bg"
            android:background="@drawable/shape_round_imageview"
            />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="26px"
            android:layout_toRightOf="@+id/avatar"
            android:textColor="#181e1d"
            tools:text="name"
            android:textSize="@dimen/textsize_32px"
            />

        <View
            android:id="@+id/dashline"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="26px"
            android:background="@drawable/dashline"/>
    </RelativeLayout>


</com.grandmagic.readingmate.view.SwipeItemLayout>