<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="98px"
                android:layout_marginRight="20px"
                android:layout_marginTop="30px">

    <ImageView
        android:id="@+id/iv_replay2replay_header"
        android:layout_width="56px"
        android:layout_height="56px"
        android:scaleType="fitXY"
        android:src="@drawable/logo"/>

    <LinearLayout
        android:id="@+id/ll_info_reply2replay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16px"
        android:layout_marginTop="5px"
        android:layout_toRightOf="@id/iv_replay2replay_header"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_nickname_reply2replay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="花花"
            android:textColor="#1cc9a2"
            android:textSize="30px"
            />

        <TextView
            android:id="@+id/tv_signature_reply2replay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15px"
            android:text="这个可以有"
            android:textColor="#181e1d"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_time_replay2replay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017/01/03 13:58"
                android:textColor="#999999"
                android:textSize="22px"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:text="@string/delete"
                android:textColor="#999999"
                android:textSize="22px"
                android:id="@+id/tv_delete_replay2replay"
                />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
