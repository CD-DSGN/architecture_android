<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="156px"

    android:layout_marginTop="48px"
    >

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:background="@drawable/shape_round_imageview"
        />

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="96px"
        android:layout_toLeftOf="@+id/avatar"
        android:background="@drawable/bg_chat_send"
        android:padding="12px"
        android:textColor="#181e1d"
        android:textSize="28px"
        />

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="30px"
        android:layout_height="30px"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/content"
        android:visibility="gone"

        />
</RelativeLayout>
