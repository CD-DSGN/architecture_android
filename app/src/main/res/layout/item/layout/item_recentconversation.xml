<?xml version="1.0" encoding="utf-8"?>

<com.grandmagic.readingmate.view.SwipeItemLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeitemlayout"
    android:layout_width="match_parent"
    android:layout_height="152px"
    >

    <TextView
        android:id="@+id/delete"
        android:layout_width="134px"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="#ff0000"
        android:gravity="center"
        android:text="@string/delete"
        android:textColor="@color/white"
        android:textSize="30px"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="152px"
        android:background="@color/white"

        android:orientation="vertical">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20px"
            tools:src="@mipmap/logo6"
            />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:layout_toRightOf="@+id/avatar"
            android:textColor="#181e1d"
            android:textSize="32px"
            tools:text="测试"
            />

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30px"
            android:layout_toRightOf="@+id/draft"
            android:textColor="#80191921"
            android:textSize="28px"
            tools:text="南侧死啊减肥呢南侧死啊减肥呢南侧死啊减肥呢"
            android:maxLines="1"
            android:ellipsize="end"
            />

        <TextView
            android:id="@+id/draft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30px"
            android:layout_toRightOf="@id/avatar"
            android:text="[草稿]"
            android:textSize="28px"
            android:textColor="@color/colorAccent"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20px"
            android:layout_marginTop="35px"
            android:textColor="#80191921"
            android:textSize="24px"
            tools:text="2012-12-2"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:background="@drawable/dashline"
            />

        <TextView
            android:id="@+id/unread"
            android:layout_width="40px"
            android:layout_height="40px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/red_point"
            android:gravity="center"
            android:text="6"
            android:textColor="@color/white"
            />
    </RelativeLayout>
</com.grandmagic.readingmate.view.SwipeItemLayout>