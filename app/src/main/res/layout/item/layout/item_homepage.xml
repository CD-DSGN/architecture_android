<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="30px"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:background="@drawable/ic_white_lack_circle"
        android:paddingLeft="26px"
        android:paddingRight="26px">

        <TextView
            android:id="@+id/bookname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="264px"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="#181e1d"
            android:textSize="32px"
            tool:text="从你的全世界路过从你的全世界路过从你的全世界路过
从你的全世界路过从你的全世界路过"
            />

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="82px"
            android:layout_height="82px"
            android:layout_below="@+id/bookname"
            android:layout_marginTop="10px"
            android:layout_alignBottom="@+id/author"
            android:layout_alignLeft="@+id/bookname"
            android:layout_alignStart="@+id/bookname"/>

        <TextView
            android:id="@+id/author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bookname"
            android:layout_marginTop="20px"
            android:layout_toLeftOf="@+id/rela_score"
            android:layout_toRightOf="@+id/avatar"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="张嘉jia.张嘉jia.张嘉jia.张嘉jia."
            android:textColor="#252a29"
            android:textSize="26px"
            />

        <com.grandmagic.readingmate.view.StarView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/ratingbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20px"
            android:layout_marginTop="96px"
            app:isIndicator="true"
            app:starEmpty="@drawable/star_empty"
            app:starFill="@drawable/star"
            app:starHeight="20px"
            app:starWidth="22px"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/ratingbar"
            android:layout_marginRight="20px"
            android:id="@+id/rela_score"
            >


            <TextView
                android:id="@+id/score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="16px"
                android:text="9"
                android:textColor="#1c99a2"
                android:textSize="22px"
                />

            <TextView
                android:id="@+id/num_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16px"
                android:layout_toRightOf="@+id/score"
                android:text="分（2.3万人评)"
                android:textColor="#999999"
                android:textSize="22px"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/t_publisher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/avatar"
            android:layout_below="@+id/avatar"
            android:layout_marginTop="30px"
            android:text="出版商: "
            android:textColor="#b3999999"
            android:textSize="22px"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/tv_publisher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/avatar"
            android:layout_below="@+id/avatar"
            android:layout_marginTop="30px"
            android:text="电子工业出版社"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="#b3999999"
            android:textSize="22px"
            />

        <TextView
            android:id="@+id/t_publishtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/avatar"
            android:layout_below="@+id/t_publisher"
            android:layout_marginTop="24px"
            android:text="出版时间: "
            android:textColor="#b3999999"
            android:textSize="22px"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/tv_publistime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/t_publisher"
            android:layout_marginTop="24px"
            android:layout_toRightOf="@+id/t_publishtime"
            android:text="2012-2-2"
            android:textColor="#b3999999"
            android:textSize="22px"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="300px"
            android:ellipsize="end"
            android:maxLines="5"
            android:textColor="#333333"
            android:textSize="26px"
            tools:text=" 读过睡前故事的人都知道，这是一本纷杂凌乱的书，像朋友
在深夜跟你叙述，叙述他走过的千山万水。那么多篇章，有温暖的，有落单的
有疯狂的。"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48px"
            android:layout_below="@+id/about"

            android:layout_marginTop="20px">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="28px"
                    android:layout_height="28px"
                    android:src="@drawable/ic_star"
                    />

                <TextView
                    android:id="@+id/collectionNum"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10px"
                    android:textColor="#66191921"
                    android:textSize="20px"
                    tools:text="2346265"
                    />

                <ImageView
                    android:layout_width="28px"
                    android:layout_height="28px"
                    android:layout_marginLeft="32px"
                    android:src="@drawable/ic_comment"
                    />

                <TextView
                    android:id="@+id/commenttimes"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10px"
                    android:text="2346265"
                    android:textColor="#66191921"
                    android:textSize="20px"
                    />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="10px">

                <ImageView
                    android:layout_width="24px"
                    android:layout_height="24px"
                    android:src="@drawable/ic_share"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10px"
                    android:text="分享"
                    android:textColor="#1cc9a2"
                    android:textSize="20px"
                    />
            </LinearLayout>

        </RelativeLayout>


    </RelativeLayout>

    <com.grandmagic.readingmate.view.IrregularImageView
        android:id="@+id/iv_conver"
        android:layout_width="224px"
        android:layout_height="298px"
        android:layout_marginLeft="20px"
        />
</RelativeLayout>

