<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_nobook"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="304px"
        android:layout_height="150px"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="650px"
        android:src="@drawable/ic_onecode"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#88000000">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="350px"
                android:layout_height="30px"
                android:layout_marginTop="246px"
                android:src="@drawable/txt_main_start_read"
                />

            <ImageView
                android:layout_width="122px"
                android:layout_height="96px"
                android:layout_marginBottom="32px"
                android:layout_marginTop="96px"
                android:src="@drawable/ic_camera_large"
                />

            <TextView
                android:id="@+id/pop_scan"
                android:layout_width="354px"
                android:layout_height="82px"
                android:background="@drawable/bg_btn_login"
                android:gravity="center"
                android:text="立即扫描"
                android:textColor="@color/white"
                android:textSize="30px"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="406px"
                android:src="@drawable/ic_main_bar"
                />

            <TextView
                android:id="@+id/pop_search"
                android:layout_width="86px"
                android:layout_height="86px"
                android:background="@drawable/bg_search"
                android:gravity="center"
                android:text="@string/search"
                android:textColor="#fefeff"
                android:textSize="30px"
                />
        </LinearLayout>
    </FrameLayout>
</FrameLayout>