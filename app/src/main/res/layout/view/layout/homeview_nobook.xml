<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_nobook"
    android:background="@color/text_green"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="184px"
        android:layout_height="184px"
        android:src="@drawable/logo"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80px"
        />
    <ImageView
        android:layout_width="304px"
        android:layout_height="150px"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="650px"
        android:src="@drawable/ic_onecode"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#22000000">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="320px"
                android:text="开始你和书的故事"
                android:textColor="#fefefe"
                android:gravity="center_horizontal"
                android:textSize="32px"
                />

            <ImageView
                android:layout_width="122px"
                android:layout_height="96px"
                android:layout_marginBottom="32px"
                android:layout_marginTop="36px"
                android:src="@drawable/camera"
                />

            <TextView
                android:id="@+id/pop_scan"
                android:layout_width="354px"
                android:layout_height="74px"
                android:gravity="center"
                android:text="立即扫码"
                android:background="@drawable/bg_scan_btn"
                android:textColor="@color/text_green"
                android:textSize="36px"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="406px"
                android:src="@drawable/ic_main_bar"
                />

            <TextView
                android:id="@+id/pop_search"
                android:layout_width="86px"
                android:layout_height="86px"
                android:background="@drawable/bg_search"
                android:gravity="center"
                android:text="@string/search"
                android:textColor="#fefeff"
                android:textSize="30px"
                />
        </LinearLayout>
    </FrameLayout>
</FrameLayout>