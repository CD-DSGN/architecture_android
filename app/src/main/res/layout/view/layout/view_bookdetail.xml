<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="30px"
    >



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="26px"
            android:layout_marginTop="30px"
            android:background="@drawable/shape_round_bookdetail"
            android:paddingRight="26px">

            <TextView
                android:id="@+id/bookname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="332px"
                android:textColor="#181e1d"
                android:textSize="@dimen/textsize_32px"
                tool:text="从你的全世界路过"
                />

            <ImageView
                android:id="@+id/avatar"
                android:layout_width="82px"
                android:visibility="gone"
                android:layout_height="82px"
                android:layout_alignLeft="@+id/bookname"
                android:layout_below="@+id/bookname"
                />

            <TextView
                android:id="@+id/author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bookname"
                android:layout_marginTop="40px"
             android:layout_marginLeft="370px"
                tool:text="张嘉jia"
                android:singleLine="true"
                android:textColor="#252a29"
                android:textSize="@dimen/textsize_28px"
                />

            <com.grandmagic.readingmate.view.StarView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/total_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_publistime"

                android:layout_marginLeft="410px"
                android:layout_marginRight="20px"
                android:layout_marginTop="15px"
                app:isIndicator="true"
                app:starEmpty="@drawable/star_empty"
                app:starFill="@drawable/ic_star_green"
                app:starHeight="40px"
                app:starWidth="44px"
                />

            <RelativeLayout
                android:id="@+id/rela_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/total_score"
                android:layout_marginLeft="410px"
                android:layout_marginRight="20px"
                >


                <TextView
                    android:id="@+id/score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="16px"
                    tool:text="9"
                    android:textColor="@color/text_green"
                    android:textSize="@dimen/textsize_24px"
                    />

                <TextView
                    android:id="@+id/num_people"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16px"
                    android:layout_toRightOf="@+id/score"
                    tool:text="分（2.3万人评)"
                    android:textColor="#999999"
                    android:textSize="@dimen/textsize_24px"
                    />
            </RelativeLayout>

            <TextView
                android:id="@+id/t_publisher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/avatar"
                android:layout_below="@+id/avatar"
                android:layout_marginTop="30px"
                android:text="出版商: "
                android:visibility="gone"
                android:textColor="#b3999999"
                android:textSize="@dimen/textsize_24px"
                />

            <TextView
                android:id="@+id/tv_publisher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/author"
                android:layout_marginTop="30px"
              android:layout_alignLeft="@+id/bookname"
                tool:text="电子工业出版社"
                android:textColor="#b3999999"
                android:textSize="@dimen/textsize_24px"
                />

            <TextView
                android:id="@+id/t_publishtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/avatar"
                android:layout_below="@+id/tv_publisher"
                android:layout_marginTop="24px"
                android:text="出版时间: "
                android:visibility="gone"
                android:textColor="#b3999999"
                android:textSize="@dimen/textsize_24px"
                />

            <TextView
                android:id="@+id/tv_publistime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_publisher"
                android:layout_marginTop="24px"
                android:layout_alignLeft="@+id/bookname"
                tool:text="2012-2-2"
                android:textColor="#b3999999"
                android:textSize="@dimen/textsize_28px"
                />

            <TextView
                android:id="@+id/about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24px"
                android:layout_marginTop="382px"
                tool:text="      读过睡前故事的人都知道，这是一本纷杂凌乱的书，像朋友
在深夜跟你叙述，叙述他走过的千山万水。那么多篇章，有温暖的，有落单的
有疯狂的。"
                android:lineSpacingMultiplier="1.5"
                tool:textColor="#333333"
                android:textSize="@dimen/textsize_28px"
                />


        </RelativeLayout>


    <com.grandmagic.readingmate.view.IrregularImageView
        android:id="@+id/iv_conver"
        android:layout_width="310px"
        android:layout_height="416px"
        android:layout_marginTop="-20px"
        android:scaleType="centerCrop"
        android:elevation="5dp"
        />

</RelativeLayout>