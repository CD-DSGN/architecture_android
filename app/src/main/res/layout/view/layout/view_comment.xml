<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottomlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="#f8f8f8"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:paddingLeft="20px"
    android:paddingRight="20px">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="70px"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10px"
            android:src="@drawable/iv_comment"
            />

        <EditText
            android:id="@+id/et_comment"
            android:layout_width="0dp"
            android:layout_height="87px"
            android:layout_marginBottom="5px"
            android:layout_marginTop="5px"
            android:layout_weight="1"
            android:background="@drawable/bg_chat_reciver"
            android:gravity="start"
            android:hint="写评论"
            android:paddingLeft="20px"
            android:textColor="#999999"
            android:textSize="24px"
            />

        <LinearLayout
            android:id="@+id/lin_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_share"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分享"
                android:textSize="30px"
                />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rela_rating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10px"
        android:layout_marginTop="10px"
        android:visibility="gone"
        >

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评分："
            android:textColor="@color/text_green"

            />

        <com.grandmagic.readingmate.view.StarView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/ratingbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20px"
            android:layout_toRightOf="@id/tv1"
            app:isIndicator="false"
            app:starDistance="30px"
            app:starEmpty="@drawable/star_empty"
            app:starFill="@drawable/ic_star_green"
            app:starHeight="30px"
            app:starWidth="32px"
            />

        <TextView
            android:id="@+id/his_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="7.5分"
            android:textColor="@color/text_green"
            />
    </RelativeLayout>

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="10px"
        android:background="@drawable/shape_round_gray"
        android:text="发表"
        android:textColor="@color/text_sumbit"
        android:textSize="26px"
        android:visibility="gone"/>
</LinearLayout>
