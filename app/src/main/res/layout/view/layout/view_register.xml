<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:background="@drawable/bg_login">


    <RelativeLayout
        android:layout_width="626px"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        >

        <View
            android:id="@+id/rg_dashline_phone"
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:layout_marginTop="138px"
            android:background="@drawable/dashline"
            />

        <EditText
            android:id="@+id/et_phone_rg"
            android:layout_width="626px"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/rg_dashline_phone"
            android:paddingBottom="24px"
            android:background="@null"
            android:hint="@string/phone"
            android:paddingTop="20px"
            android:maxLines="1"
            android:paddingLeft="48px"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="24px"
            android:inputType="phone"
            android:theme="@style/et_pass"
            />

        <ImageView
            android:layout_width="34px"
            android:layout_height="34px"
            android:layout_alignBottom="@id/rg_dashline_phone"
            android:layout_marginBottom="22px"
            android:src="@drawable/phone"
            />

        <ImageView
            android:id="@+id/rg_phone_clear"
            android:layout_width="26px"
            android:layout_height="26px"
            android:layout_alignBottom="@id/rg_dashline_phone"
            android:layout_alignRight="@id/et_phone_rg"
            android:layout_marginBottom="22px"
            android:src="@drawable/clear"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="626px"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        >

        <View
            android:id="@+id/rg_dashline_verify"
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:layout_marginTop="118px"
            android:background="@drawable/dashline"
            />

        <ImageView
            android:layout_width="34px"
            android:layout_height="34px"
            android:layout_alignBottom="@id/rg_dashline_verify"
            android:layout_marginBottom="22px"
            android:src="@drawable/refresh"
            />

        <TextView
            android:layout_width="154px"
            android:layout_height="80px"
            android:layout_alignBottom="@+id/rg_dashline_verify"
            android:layout_alignRight="@id/rg_dashline_verify"
            android:layout_marginBottom="22px"
            android:layout_marginTop="22px"
            android:background="@drawable/bg_btn_login"
            android:gravity="center"
            android:id="@+id/send_verify"
            android:text="@string/send_code"
            android:textColor="@color/white"
            android:textSize="24px"
            />

        <EditText
            android:id="@+id/et_verify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/rg_dashline_verify"
            android:paddingBottom="24px"
            android:background="@null"
            android:hint="@string/verification_code"
            android:layout_toLeftOf="@id/send_verify"
            android:maxLines="1"
            android:paddingTop="20px"
            android:paddingLeft="48px"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="24px"
            android:inputType="number"
            android:theme="@style/et_pass"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="626px"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        >

        <View
            android:id="@+id/rg_dashline_pass"
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:layout_marginTop="118px"
            android:background="@drawable/dashline"
            />

        <ImageView
            android:layout_width="34px"
            android:layout_height="34px"
            android:layout_alignBottom="@id/rg_dashline_pass"
            android:layout_marginBottom="22px"
            android:src="@drawable/pass"
            />


        <ImageView
            android:id="@+id/eye_pass_rg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/rg_dashline_pass"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="22px"
            android:src="@drawable/password_eye"
            />

        <EditText
            android:id="@+id/et_pass_rg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/rg_dashline_pass"
            android:paddingBottom="24px"
            android:background="@null"
            android:hint="@string/password"
            android:paddingTop="20px"
            android:inputType="textPassword"
            android:maxLines="1"
            android:paddingLeft="48px"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="24px"
            android:layout_toLeftOf="@+id/eye_pass_rg"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="626px"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        >

        <View
            android:id="@+id/rg_dashline_passsure"
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:layout_marginTop="118px"
            android:background="@drawable/dashline"
            />

        <ImageView
            android:layout_width="34px"
            android:layout_height="34px"
            android:layout_alignBottom="@id/rg_dashline_passsure"
            android:layout_marginBottom="22px"
            android:src="@drawable/pass"
            />


        <EditText
            android:id="@+id/et_passsure_rg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/rg_dashline_passsure"
            android:paddingBottom="24px"
            android:background="@null"
            android:hint="@string/passwordsure"
            android:paddingTop="20px"
            android:inputType="textPassword"
            android:maxLines="1"
            android:paddingLeft="48px"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="24px"
            android:layout_toLeftOf="@+id/eye_pass_sure_rg"
            />


        <ImageView
            android:id="@+id/eye_pass_sure_rg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/rg_dashline_passsure"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="22px"
            android:src="@drawable/password_eye"
            />
    </RelativeLayout>


    <Button
        android:id="@+id/register_rg"
        android:layout_width="626px"
        android:layout_height="82px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80px"
        android:background="@drawable/bg_btn_login"
        android:text="@string/registernow"
        android:textColor="@color/white"
        android:textSize="30px"
        />
</LinearLayout>