<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:background="@drawable/bg_login">

    <RelativeLayout
        android:layout_width="626px"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"

        >

        <View
            android:id="@+id/dashline_phone"
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:layout_marginTop="138px"
            android:background="@drawable/dashline"
            />

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/dashline_phone"
            android:layout_marginBottom="24px"
            android:background="@null"
            android:cursorVisible="false"
            android:hint="@string/phone"
            android:maxLines="1"
            android:paddingLeft="48px"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="24px"
            android:theme="@style/et_pass"/>

        <ImageView
            android:layout_width="34px"
            android:layout_height="34px"
            android:layout_alignBottom="@id/dashline_phone"
            android:layout_alignLeft="@+id/et_phone"
            android:layout_marginBottom="22px"
            android:src="@drawable/phone"
            />


        <ImageView
            android:id="@+id/phone_clear"
            android:layout_width="34px"
            android:layout_height="34px"
            android:layout_alignBottom="@id/dashline_phone"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="22px"
            android:src="@drawable/clear"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="626px"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        >

        <View
            android:id="@+id/dashline_pass"
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:layout_marginTop="138px"
            android:background="@drawable/dashline"
            />

        <EditText
            android:id="@+id/et_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/dashline_pass"
            android:layout_marginBottom="24px"
            android:background="@null"
            android:cursorVisible="false"
            android:hint="@string/password"
            android:maxLines="1"
            android:paddingLeft="48px"
            android:password="true"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="24px"
            />

        <ImageView
            android:layout_width="34px"
            android:layout_height="34px"
            android:layout_alignBottom="@id/dashline_pass"
            android:layout_marginBottom="22px"
            android:src="@drawable/pass"
            />

        <ImageView
            android:id="@+id/pass_eye"
            android:layout_width="32px"
            android:layout_height="24px"
            android:layout_alignBottom="@id/et_pass"
            android:layout_alignParentRight="true"

            android:src="@drawable/eye"
            />

    </RelativeLayout>

    <Button
        android:id="@+id/login"
        android:layout_width="626px"
        android:layout_height="82px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:background="@drawable/bg_btn_login"
        android:text="@string/loginnow"
        android:textColor="@color/white"
        android:textSize="30px"
        />

    <TextView
        android:id="@+id/forgetpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="@string/forget_pass"
        android:textColor="#f8f8f8"
        android:textSize="22px"
        />

</LinearLayout>