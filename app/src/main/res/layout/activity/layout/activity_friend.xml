<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.grandmagic.readingmate.activity.FriendActivity">

    <include layout="@layout/title_layout"/>

    <RelativeLayout
        android:layout_width="720px"
        android:layout_height="90px"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="50px"
        android:layout_marginTop="50px"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@drawable/shape_dash_frame">

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="35px"
            android:layout_height="35px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="52px"
            android:src="@drawable/ic_search"
            />

        <EditText
            android:id="@+id/et_search"
            android:layout_width="698px"
            android:layout_height="68px"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_search"
            android:background="@null"

            android:hint="关键字搜索"
            android:imeOptions="actionSearch"
            android:paddingLeft="24px"
            android:textColor="#999999"
            android:textColorHint="#999999"
            android:textSize="22px"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <com.grandmagic.readingmate.view.SwipRecycleView
            android:id="@+id/recyclerview_friend"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

        </com.grandmagic.readingmate.view.SwipRecycleView>

        <com.grandmagic.readingmate.view.IndexBar
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/indexbar"
            android:layout_width="50px"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            />

        <TextView
            android:id="@+id/hintText"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50px"
            android:layout_marginTop="50px"
            android:background="@drawable/bg_hinttext"
            android:gravity="center"
            android:textColor="@color/white"
            android:visibility="gone"
            />
    </RelativeLayout>
</LinearLayout>
