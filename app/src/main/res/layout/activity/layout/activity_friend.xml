<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.grandmagic.readingmate.activity.FriendActivity">

    <include layout="@layout/title_layout"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50px">


        <com.grandmagic.readingmate.view.SwipRecycleView
            android:id="@+id/recyclerview_friend"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

        </com.grandmagic.readingmate.view.SwipRecycleView>

        <com.grandmagic.readingmate.view.IndexBar
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/indexbar"
            android:layout_width="50px"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            />

        <TextView
            android:id="@+id/hintText"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50px"
            android:layout_marginTop="50px"
            android:background="@drawable/bg_hinttext"
            android:textColor="@color/white"
            android:visibility="gone"
            android:gravity="center"
            />
    </RelativeLayout>
</LinearLayout>
