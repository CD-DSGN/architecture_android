<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
    android:background="#ffffffff">

    <ImageView
        android:id="@+id/iv_frag_personal_header"
        android:layout_width="266px"
        android:layout_height="266px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="90px"
        android:src="@drawable/logo"
        />

    <TextView
        android:id="@+id/tv_frag_personal_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40px"
        android:text="@string/nickname_default"
        android:textColor="#e6181e1d"
        android:textSize="44px"
        />

    <TextView
        android:id="@+id/tv_frag_personal_signature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="26px"
        android:text="@string/signature_default"
        android:textColor="#181e1d"
        android:textSize="28px"
        />


    <LinearLayout
        android:id="@+id/ll_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/ic_frag_personal_male"
            android:layout_width="28px"
            android:layout_height="28px"
            android:layout_marginLeft="13px"
            android:layout_marginRight="13px"
            android:src="@drawable/iv_male"/>

        <ImageView
            android:id="@+id/ic_frag_personal_female"
            android:layout_width="28px"
            android:layout_height="28px"
            android:layout_marginLeft="13px"
            android:layout_marginRight="13px"
            android:src="@drawable/iv_female"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26px"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/subscriped_book_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#1cc9a2"
            android:textSize="26px"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ben"
            android:textColor="#181e1d"
            android:textSize="24px"
            />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/subscribed_books"
            android:textColor="#181e1d"
            android:textSize="24px"/>


        <TextView
            android:id="@+id/tv_edit_personal_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20px"
            android:text="@string/edit_info"
            android:textSize="24px"/>

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36px"
        android:src="@drawable/dv_green"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center_vertical"
        >

        <LinearLayout
            android:id="@+id/ll_collect"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32px"
            android:layout_marginTop="32px"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="38px"
                android:layout_height="38px"
                android:src="@drawable/iv_collection"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:text="@string/collection"
                android:textColor="#181e1d"
                android:textSize="34px"
                />

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="10px"
            android:layout_marginTop="10px"
            android:src="@drawable/ic_green_vertical_line"
            />

        <LinearLayout
            android:id="@+id/ll_setting"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32px"
            android:layout_marginTop="32px"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="38px"
                android:layout_height="38px"
                android:src="@drawable/iv_setting"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:text="@string/settings"
                android:textColor="#181e1d"
                android:textSize="34px"
                />

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/dv_green"
        />

    <RelativeLayout
        android:id="@+id/ll_comments_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="32px"
            android:layout_height="32px"
            android:id="@+id/iv_comment"
            android:src="@drawable/iv_comment"
            >
        </ImageView>

        <TextView
            android:layout_toRightOf="@+id/iv_comment"
            android:id="@+id/tv_comment_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:gravity="center"
            android:text="@string/comment_history"
            android:textColor="#181e1d"
            android:textSize="28px"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/rela_notification"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/red_point"
                tools:text="2"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="24px"
                android:layout_toLeftOf="@+id/iv_rightarrow"
                android:id="@+id/tv_unread_num"
                android:visibility="invisible"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/right_arrow"
                android:layout_alignParentRight="true"
                android:id="@+id/iv_rightarrow"
                android:layout_marginRight="20px"
                android:layout_marginLeft="10px"
                />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>