<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_subscription"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.grandmagic.readingmate.activity.SubscriptionActivity">

    <include layout="@layout/title_layout"
        >
    </include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10px">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/subscription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="198px"
                android:gravity="center"
                android:text="@string/subscription"
                android:textColor="#1cc9a2"
                android:textSize="38px"
                ></TextView>

            <View
                android:id="@+id/iv_dashline_subscription"
                android:layout_width="116px"
                android:layout_height="1px"
                android:layout_below="@+id/subscription"
                android:background="@drawable/dashline"
                android:layout_marginLeft="176px"
                />
        </RelativeLayout>

        <ImageView
            android:layout_width="1px"
            android:layout_height="30px"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_green_vertical_line"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            >
            <TextView
                android:id="@+id/subscriped"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="176px"
                android:gravity="center"
                android:text="@string/subscribed"
                android:textColor="#191921"
                android:textSize="38px"
                ></TextView>

            <View
                android:id="@+id/iv_dashline_subscriped"
                android:layout_width="116px"
                android:layout_height="1px"
                android:layout_below="@+id/subscriped"
                android:background="@drawable/dashline"
                android:layout_alignParentRight="true"
                android:layout_marginRight="172px"
                android:visibility="invisible"
                />
        </RelativeLayout>
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_subscription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30px"
        >
    </android.support.v4.view.ViewPager>

</LinearLayout>
