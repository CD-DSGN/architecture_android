<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_personal_info_edit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.grandmagic.readingmate.activity.PersonalInfoEditActivity">

    <include
        android:id="@+id/title_layout"
        layout="@layout/title_layout"/>

    <RelativeLayout
        android:id="@+id/rl_avar"
        android:layout_width="match_parent"
        android:layout_height="104px"
        android:layout_below="@id/title"
        android:layout_marginTop="150px"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="66px"
            android:gravity="center_vertical"
            android:text="@string/avar"
            android:textColor="#181e1d"
            android:textSize="32px"
            />

        <ImageView
            android:id="@+id/iv_avar"
            android:layout_width="90px"
            android:layout_height="90px"
            android:layout_alignParentRight="true"
            android:layout_marginRight="66px"
            android:src ="@drawable/app_logo"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:src="@drawable/dashline"
            android:scaleType="fitXY"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_nickname"
        android:layout_width="match_parent"
        android:layout_height="104px"
        android:layout_below="@id/rl_avar"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="66px"
            android:gravity="center_vertical"
            android:text="@string/nickname"
            android:textColor="#181e1d"
            android:textSize="32px"
            />

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="66px"
            android:clickable="true"
            android:text="@string/unset"
            android:textColor="#999999"
            android:textSize="30px"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_alignParentBottom="true"

            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:src="@drawable/dashline"
            android:scaleType="fitXY"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_signature"
        android:layout_width="match_parent"
        android:layout_height="104px"
        android:layout_below="@id/rl_nickname"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="66px"
            android:gravity="center_vertical"
            android:text="@string/signature"
            android:textColor="#181e1d"
            android:textSize="32px"
            />


        <TextView
            android:id="@+id/tv_signature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="66px"
            android:clickable="true"
            android:text="@string/unset"
            android:textColor="#999999"
            android:textSize="30px"/>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:src="@drawable/dashline"
            android:scaleType="fitXY"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_gender"
        android:layout_width="match_parent"
        android:layout_height="104px"
        android:layout_below="@id/rl_signature"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="66px"
            android:gravity="center_vertical"
            android:text="@string/gender"
            android:textColor="#181e1d"
            android:textSize="32px"
            />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight = "true"
            android:layout_centerVertical="true"
            android:id="@+id/rl_set_gender">

            <TextView
                android:id="@+id/tv_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10px"
                android:layout_marginRight="66px"
                tools:text="å¥³"
                android:textColor="#999999"
                android:textSize="30px"
                />

            <ImageView
                android:id="@+id/iv_gender"
                android:layout_width="28px"
                android:layout_height="28px"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/tv_gender"
                android:src="@drawable/iv_female"
                />
        </RelativeLayout>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:src="@drawable/dashline"
            android:scaleType="fitXY"/>
    </RelativeLayout>


</RelativeLayout>
