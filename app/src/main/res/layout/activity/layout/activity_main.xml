<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <FrameLayout
        android:id="@+id/contentframe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomlayout">

    </FrameLayout>

    <LinearLayout
        android:id="@+id/bottomlayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/layout_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:text="@string/home"
                android:id="@+id/text_home"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher"
                android:layout_above="@+id/text_home"
                android:layout_centerHorizontal="true"
                android:id="@+id/iv_home"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_chat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
               android:layout_alignParentBottom="true"
                android:text="@string/readchat"
                android:id="@+id/text_chat"
                android:layout_centerHorizontal="true"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher"
                android:layout_above="@+id/text_chat"
                android:layout_centerHorizontal="true"
                android:id="@+id/iv_chat"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
               android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:text="@string/search"
                android:id="@+id/text_search"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher"
                android:layout_above="@+id/text_search"
                android:layout_centerHorizontal="true"
                android:id="@+id/iv_search"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_personal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
            android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:text="@string/mine"
                android:id="@+id/text_person"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher"
                android:layout_above="@+id/text_person"
                android:layout_centerHorizontal="true"
                android:id="@+id/iv_person"
                />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>

