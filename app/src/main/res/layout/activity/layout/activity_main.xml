<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    >

    <FrameLayout
        android:id="@+id/contentframe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomlayout">

    </FrameLayout>

    <LinearLayout
        android:id="@+id/bottomlayout"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/layout_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/text_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:button="@null"
                android:text="@string/home"
                android:textSize="22px"
                />

            <ImageView
                android:id="@+id/iv_home"
                android:layout_width="34px"
                android:layout_height="34px"
                android:layout_above="@+id/text_home"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="8px"
                android:layout_marginTop="6px"
                android:src="@drawable/ic_main_home"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_chat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >

            <TextView
                android:id="@+id/text_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:button="@null"
                android:text="家友"
                android:textSize="22px"
                />

            <ImageView
                android:id="@+id/iv_chat"
                android:layout_width="34px"
                android:layout_height="34px"
                android:layout_above="@+id/text_chat"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="8px"
                android:layout_marginTop="6px"
                android:src="@drawable/ic_double_person"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >

            <TextView
                android:id="@+id/text_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:button="@null"
                android:text="@string/search"
                android:textSize="22px"
                />

            <ImageView
                android:id="@+id/iv_search"
                android:layout_width="34px"
                android:layout_height="34px"
                android:layout_above="@+id/text_search"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="8px"
                android:layout_marginTop="6px"
                android:src="@drawable/ic_book"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_personal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >

            <TextView
                android:id="@+id/text_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:button="@null"
                android:text="@string/mine"
                android:textSize="22px"
                />

            <ImageView
                android:id="@+id/iv_person"
                android:layout_width="34px"
                android:layout_height="34px"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="8px"
                android:layout_marginTop="6px"
                android:src="@drawable/ic_single_person"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>

