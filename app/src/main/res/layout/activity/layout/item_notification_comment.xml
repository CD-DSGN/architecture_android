<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="20px"
              android:layout_marginRight="20px"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70px">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="70px"
            android:layout_height="70px"
            tools:src="@color/bottom_bg"
            />

        <TextView
            android:id="@+id/nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_toRightOf="@id/avatar"
            android:textColor="@color/text_black"
            android:textSize="30px"
            tools:text="名字"/>

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/nickname"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5px"
            android:textColor="@color/text_gray"
            android:textSize="20px"
            tools:text="2017年4月6日13:58:45"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="回复"
            android:textColor="@color/text_gray"
            android:textSize="24px"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32px"
        android:layout_marginLeft="90px"
        android:layout_marginTop="32px"
        android:textSize="28px"
        tools:text="你在《xxx》书中的评论收到一条回复"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_gray_whitstoke"
        android:padding="30px">

        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="72px"
            android:textSize="26px"
            tools:text="评论内容"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="40px"
        android:layout_marginTop="40px"
        android:background="@drawable/dashline"/>

</LinearLayout>