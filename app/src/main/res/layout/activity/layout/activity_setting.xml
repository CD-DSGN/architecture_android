<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.grandmagic.readingmate.activity.SettingActivity">

    <include layout="@layout/title_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26px"
        android:layout_marginTop="46px"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_settings_header"
            android:layout_width="86px"
            android:layout_height="86px"
            android:src="@drawable/iv_head_default"
            />

        <TextView
            style="@style/txt_setting_second"
            android:text="@string/my_account"/>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:scaleType="fitXY"
        android:src="@drawable/dv_green"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="69px"
        android:layout_marginRight="69px"
        android:paddingBottom="26px"
        android:paddingTop="26px"
        >

        <TextView
            style="@style/setting_item_header"
            android:text="@string/account"/>

        <TextView
            android:id="@+id/tv_setting_account"
            style="@style/setting_item_tail"
            android:text="113456789"/>

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginLeft="69px"
        android:layout_marginRight="69px"
        android:scaleType="fitXY"
        android:src="@drawable/dv_green"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="69px"
        android:layout_marginRight="69px"
        android:paddingBottom="26px"
        android:paddingTop="26px"
        >

        <TextView
            style="@style/setting_item_header"
            android:text="@string/bind_mobile"/>

        <TextView
            android:id="@+id/tv_setting_mobile"
            style="@style/setting_item_tail"
            android:text="13812345678"/>

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:scaleType="fitXY"
        android:src="@drawable/dv_green"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26px"
        android:layout_marginTop="46px"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_settings_setting"
            android:layout_width="86px"
            android:layout_height="86px"
            android:src="@drawable/ic_setting"
            />

        <TextView
            style="@style/txt_setting_second"
            android:text="@string/settings"
            />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:scaleType="fitXY"
        android:src="@drawable/dv_green"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="69px"
        android:layout_marginRight="69px"
        android:paddingBottom="26px"
        android:paddingTop="26px"
        >

        <TextView
            style="@style/setting_item_header"
            android:text="@string/current_version"/>

        <TextView
            android:id="@+id/tv_setting_current_version"
            style="@style/setting_item_tail"
            android:text="1.0.1"/>

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginLeft="69px"
        android:layout_marginRight="69px"
        android:scaleType="fitXY"
        android:src="@drawable/dv_green"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="69px"
        android:layout_marginRight="69px"
        android:paddingBottom="26px"
        android:paddingTop="26px"
        >

        <TextView
            style="@style/setting_item_header"
            android:text="@string/receive_notice"/>

        <ImageButton
            android:id="@+id/switch_setting_push"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/ic_off"/>

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginLeft="69px"
        android:layout_marginRight="69px"
        android:scaleType="fitXY"
        android:src="@drawable/dv_green"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="69px"
        android:layout_marginRight="69px"
        android:paddingBottom="26px"
        android:paddingTop="26px"
        >

        <TextView
            style="@style/setting_item_header"
            android:text="@string/clear_cache"/>
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:src="@drawable/dv_green"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26px"
        android:layout_marginTop="46px"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_settings_about_us"
            android:layout_width="86px"
            android:layout_height="86px"
            android:src="@drawable/ic_about_us"
            />

        <TextView
            style="@style/txt_setting_second"
            android:text="@string/about_us"
            />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:scaleType="fitXY"
        android:src="@drawable/dv_green"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="69px"
        android:layout_marginRight="69px"
        android:paddingBottom="26px"
        android:paddingTop="26px"
        >

        <TextView
            style="@style/setting_item_header"
            android:text="@string/share_dujia"/>

        <ImageView
            android:layout_width="34px"
            android:layout_height="30px"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_share"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60px"
        android:text="@string/login_out"
        android:textColor="#e73636"
        android:textSize="28px"/>

</LinearLayout>
