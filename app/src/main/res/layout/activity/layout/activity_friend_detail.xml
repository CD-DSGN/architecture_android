<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    >

    <include layout="@layout/title_layout"/>

    <RelativeLayout
        android:layout_marginTop="40px"
        android:layout_width="match_parent"
        android:layout_height="350px">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="350px"
            android:layout_height="350px"
            android:layout_centerHorizontal="true"
            />

        <ImageView
            android:id="@+id/recommend"
            android:layout_width="92px"
            android:layout_height="92px"
            android:layout_centerVertical="true"
            android:layout_marginRight="40px"
            android:layout_toLeftOf="@+id/avatar"
            android:src="@drawable/iv_recommend"
            />

        <ImageView
            android:layout_width="92px"
            android:layout_height="92px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40px"
            android:layout_toRightOf="@+id/avatar"
            android:src="@drawable/iv_sendmsg"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="36px"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/gender"
            android:layout_width="28px"
            android:layout_height="28px"
            android:src="@drawable/iv_female"
            />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:text="张山"
            android:textColor="#181e1d"
            android:textSize="38px"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26px"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="读家账号"
            android:textColor="#999999"
            android:textSize="24px"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:text="1324567"
            android:textColor="#999999"
            android:textSize="24px"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48px"
        android:layout_marginTop="16px"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称"
            android:textColor="#999999"
            android:textSize="24px"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:text="花花"
            android:textColor="#999999"
            android:textSize="24px"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView

            android:layout_width="28px"
            android:layout_height="28px"
            android:src="@drawable/iv_collection"
            />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:text="个人收藏"
            android:textColor="#181e1d"
            android:textSize="38px"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="66px"
        android:layout_marginRight="66px"
        android:layout_width="match_parent"
        android:layout_height="226px">

        <com.grandmagic.readingmate.view.IrregularImageView
            android:id="@+id/iv_coll_1"
            android:scaleType="centerCrop"
            android:layout_width="170px"
            android:layout_height="match_parent"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="44px"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView

            android:layout_width="28px"
            android:layout_height="28px"
            android:src="@drawable/iv_comment"
            />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:text="评论记录"
            android:textColor="#181e1d"
            android:textSize="38px"
            />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    </android.support.v7.widget.RecyclerView>
</LinearLayout>
