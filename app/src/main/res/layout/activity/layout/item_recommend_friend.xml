<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="156px"
    android:background="@color/white">

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20px"
        android:background="@drawable/shape_round_imageview"
        tools:src="@color/bottom_bg"
        />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="26px"
        android:layout_toRightOf="@+id/avatar"
        android:textColor="#181e1d"
        android:textSize="32px"
        tools:text="name"
        />

    <View
        android:id="@+id/dashline"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="26px"
        android:background="@drawable/dashline"/>

    <ImageButton
        android:layout_width="40px"
        android:layout_height="40px"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:src="@drawable/selector_checkbtn"
        android:visibility="gone"
        tools:visibility="visible"
        android:id="@+id/checkbtn"
        />
</RelativeLayout>