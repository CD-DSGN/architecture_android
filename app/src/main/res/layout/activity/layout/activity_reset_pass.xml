<?xml version="1.0" encoding="utf-8"?>
<!--似乎打开fitsSystemWindows的时候内容不会侵入到状态栏-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    android:fitsSystemWindows="true"
>
<include layout="@layout/title_layout"></include>
    <RelativeLayout
        android:layout_width="626px"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        >

        <View
            android:id="@+id/rg_dashline_verify"
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:layout_marginTop="118px"
            android:background="@drawable/dashline"
            />

        <ImageView
            android:layout_width="34px"
            android:layout_height="34px"
            android:layout_alignBottom="@id/rg_dashline_verify"
            android:layout_marginBottom="22px"
            android:src="@drawable/refresh"
            />


        <EditText
            android:id="@+id/et_verify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/rg_dashline_verify"
            android:background="@null"
            android:hint="@string/verification_code"
            android:inputType="number"
            android:maxLines="1"
            android:paddingBottom="24px"
            android:paddingLeft="48px"
            android:paddingTop="20px"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="24px"
            android:theme="@style/et_pass"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="626px"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        >

        <View
            android:id="@+id/rg_dashline_pass"
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:layout_marginTop="118px"
            android:background="@drawable/dashline"
            />

        <ImageView
            android:layout_width="34px"
            android:layout_height="34px"
            android:layout_alignBottom="@id/rg_dashline_pass"
            android:layout_marginBottom="22px"
            android:src="@drawable/pass"
            />


        <ImageView
            android:id="@+id/eye_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/rg_dashline_pass"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="22px"
            android:src="@drawable/password_eye"
            />

        <EditText
            android:id="@+id/et_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/rg_dashline_pass"
            android:layout_toLeftOf="@+id/eye_pass"
            android:background="@null"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:maxLines="1"
            android:paddingBottom="24px"
            android:paddingLeft="48px"
            android:paddingTop="20px"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="24px"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="626px"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        >

        <View
            android:id="@+id/rg_dashline_passsure"
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:layout_marginTop="118px"
            android:background="@drawable/dashline"
            />

        <ImageView
            android:layout_width="34px"
            android:layout_height="34px"
            android:layout_alignBottom="@id/rg_dashline_passsure"
            android:layout_marginBottom="22px"
            android:src="@drawable/pass"
            />


        <EditText
            android:id="@+id/et_passsure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/rg_dashline_passsure"
            android:layout_toLeftOf="@+id/eye_pass_sure"
            android:background="@null"
            android:hint="@string/passwordsure"
            android:inputType="textPassword"
            android:maxLines="1"
            android:paddingBottom="24px"
            android:paddingLeft="48px"
            android:paddingTop="20px"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="24px"
            />


        <ImageView
            android:id="@+id/eye_pass_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/rg_dashline_passsure"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="22px"
            android:src="@drawable/password_eye"
            />
    </RelativeLayout>

    <TextView
        android:layout_width="626px"
        android:layout_height="82px"
        android:text="@string/reset"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:background="@drawable/bg_btn_login"
        android:layout_marginTop="90px"
        android:id="@+id/reset"
        />
</LinearLayout>
