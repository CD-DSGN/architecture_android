<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="628px"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_dlg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="38px"
            android:layout_marginTop="38px"
            android:text="消息提示"
            android:textColor="#181e1d"
            android:textSize="36px"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@drawable/dashline"
            />


        <TextView
            android:id="@+id/tv_content"
            android:layout_width="618px"
            android:layout_height="138px"
            android:layout_gravity="center"
            android:layout_marginTop="26px"
            android:textColor="#000000"
            android:textSize="30px"
            tools:text="消息"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="36px"
            android:background="@drawable/dashline"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/no"
                android:layout_width="0dp"
                android:layout_height="65px"
                android:layout_marginBottom="20px"
                android:layout_marginLeft="60px"
                android:layout_marginRight="60px"
                android:layout_marginTop="26px"
                android:layout_weight="1"
                android:background="@drawable/bg_dlg_btn"
                android:gravity="center"
                android:text="NO"
                android:textColor="#ffffff"
                android:textSize="26px"/>


            <ImageView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_marginTop="5px"
                android:layout_marginBottom="5px"
                android:src="@drawable/ic_green_vertical_line"
                />

            <Button
                android:id="@+id/yes"
                android:layout_width="0dp"
                android:layout_height="65px"
                android:layout_marginBottom="20px"
                android:layout_marginLeft="60px"
                android:layout_marginRight="60px"
                android:layout_marginTop="26px"
                android:layout_weight="1"
                android:background="@drawable/bg_dlg_btn"
                android:gravity="center"
                android:text="Yes"
                android:textColor="#ffffff"
                android:textSize="26px"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>


