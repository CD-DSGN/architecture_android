<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="628px"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_round"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="38px"
            android:layout_marginTop="38px"
            android:text="消息提示"
            android:textColor="#181e1d"
            android:textSize="36px"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@drawable/dashline"
            android:id="@+id/top_dash_line"
            />


        <TextView
            android:id="@+id/tv_content"
            android:layout_width="618px"
            android:layout_height="138px"
            android:layout_gravity="center"
            android:layout_marginTop="26px"
            android:textColor="#999999"
            android:textSize="28px"
            tools:text="消息"
            android:textAlignment="center"
            android:gravity="center"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="36px"
            android:background="@drawable/dashline"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110px"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/no"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:singleLine="true"
                android:text="No"
                android:textColor="#999999"
                android:textSize="32px"/>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@drawable/ic_main_bar_two"
                android:layout_marginTop="2px"
                android:layout_marginBottom="2px"/>

            <Button
                android:id="@+id/yes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:singleLine="true"
                android:text="Yes"
                android:textColor="#1cc9a2"
                android:textSize="32px"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>


