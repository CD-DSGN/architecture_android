<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal">


    <LinearLayout
        android:layout_width="628px"
        android:layout_height="wrap_content"
        android:background="@drawable/free_dialog_bg"
        android:orientation="vertical">


        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="38px"
            android:layout_marginTop="38px"
            android:text="消息提示"
            android:textColor="#181e1d"
            android:textSize="36px"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@drawable/dashline"
            />


        <FrameLayout
            android:layout_width="600px"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="26px"
>

            <EditText
                android:id="@+id/message"
                android:layout_width="match_parent"
                android:layout_height="138px"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/shape_rect_white_with_board"
                android:textColor="#191921"
                android:textSize="28px"
                android:paddingLeft="20px"
                android:paddingRight="20px"
                />

            <TextView
                android:id="@+id/num_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="5px"
                android:layout_marginRight="5px"
                android:text="0/100"
                android:textColor="#99999999"
                android:textSize="22px"/>
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="36px"
            android:background="@drawable/dashline"
            />


        <Button
            android:id="@+id/yes"
            android:layout_width="88px"
            android:layout_height="56px"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="20px"
            android:layout_marginRight="20px"
            android:layout_marginTop="26px"
            android:background="@drawable/bg_dlg_btn"
            android:gravity="center"
            android:text="Yes"
            android:textColor="#ffffff"
            android:textSize="26px"/>
    </LinearLayout>
</LinearLayout>

