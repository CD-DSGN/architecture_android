<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#11ffffff">

    <LinearLayout
        android:layout_width="566px"
        android:layout_height="406px"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_gray_3dip"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
          android:layout_marginTop="46px"

            android:text="消息提示"
            android:textColor="#181e1d"
            android:textSize="42px"/>
<View
    android:layout_width="match_parent"
    android:layout_height="1px"
    android:layout_marginTop="36px"
    android:layout_marginBottom="36px"
    android:background="@drawable/dashline"
    />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_toLeftOf="@+id/clear_text"
                android:layout_width="470px"
                android:layout_height="96px">

                <EditText
                    android:id="@+id/message"
                    android:layout_width="match_parent"
                    android:layout_height="96px"
                    android:layout_marginLeft="22px"
                    android:textColor="#000000"
                    android:background="@drawable/free_dialog_bg"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="bottom|right"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="10/100"
                    android:id="@+id/num_hint"/>
            </FrameLayout>

            <ImageView
                android:id="@+id/clear_text"
                android:layout_width="36px"
                android:layout_height="36px"
                android:layout_marginRight="20px"
                android:layout_marginLeft="20px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_gray_clear"/>
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="36px"
            android:layout_marginBottom="36px"
            android:background="@drawable/dashline"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <Button
                android:id="@+id/no"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:singleLine="true"
                android:text="No"
                android:textColor="#999999"
                android:textSize="16sp"/>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@drawable/ic_main_bar_two"/>

            <Button
                android:id="@+id/yes"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:singleLine="true"
                android:text="Yes"
                android:textColor="#1cc9a2"
                android:textSize="16sp"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>