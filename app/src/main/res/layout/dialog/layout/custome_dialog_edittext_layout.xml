<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="566px"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/free_dialog_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="128px"
            android:gravity="center"
            tools:text="消息提示"
            android:textColor="#181e1d"
            android:textSize="36px"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginBottom="36px"
            android:background="@drawable/dashline"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           >

            <FrameLayout
                android:layout_toLeftOf="@+id/clear_text"
                android:layout_width="470px"
                android:layout_height="134px"
                android:background="@drawable/bg_dlg_edit">

                <EditText
                    android:id="@+id/message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22px"
                    android:textColor="#999999"
                    android:background="@null"
                    android:textSize="28px"
                    tools:text="加个好友好不"
                    android:gravity="start"
                    android:layout_marginRight="22px"
                    android:minLines="2"
                    android:paddingBottom="5px"
                    android:paddingTop="5px"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:layout_marginRight="22px"
                    android:layout_marginBottom="10px"
                    tools:text="10/100"
                    android:id="@+id/num_hint"
                    android:textSize="22px"
                    android:textColor="#cc999999"
                    android:gravity="center"/>
            </FrameLayout>

            <ImageView
                android:id="@+id/clear_text"
                android:layout_width="36px"
                android:layout_height="36px"
                android:layout_marginRight="20px"
                android:layout_marginLeft="20px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_gray_clear"/>
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@drawable/dashline"
            android:layout_marginTop="38px"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110px"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/no"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:singleLine="true"
                android:text="No"
                android:textColor="#999999"
                android:textSize="32px"/>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@drawable/ic_main_bar_two"
                android:layout_marginTop="2px"
                android:layout_marginBottom="2px"/>

            <Button
                android:id="@+id/yes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:singleLine="true"
                android:text="Yes"
                android:textColor="#1cc9a2"
                android:textSize="32px"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>